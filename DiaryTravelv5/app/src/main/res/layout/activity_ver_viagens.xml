<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#B3E2D3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Toolbar que mostra automaticamente o nome da app -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#2D8C99"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white" />

    <!-- Botão para ir ao perfil -->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain3"
        android:layout_width="364dp"
        android:layout_height="690dp"
        android:layout_marginTop="108dp"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:fontFamily="@font/extrabold"
        android:text="DiaryTravel"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="301dp"
        android:layout_height="198dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="152dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnIrParaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2D8C99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/btnMenuLateral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2D8C99"
        app:srcCompat="@drawable/menu"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoltar"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="#1D4E89"
        android:fontFamily="@font/regular"
        android:padding="12dp"
        android:text="Voltar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="722dp" />

    <FrameLayout
        android:id="@+id/containerMenuLateral"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </FrameLayout>

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/extrabold"
        android:text="Título:"
        android:textColor="#424950"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Pontos"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="602dp" />

    <TextView
        android:id="@+id/textComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Comentário:"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="509dp" />

    <TextView
        android:id="@+id/textAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Avaliação:"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="467dp" />

    <TextView
        android:id="@+id/textLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Local:"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="429dp" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Data:"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="555dp" />

</androidx.constraintlayout.widget.ConstraintLayout>