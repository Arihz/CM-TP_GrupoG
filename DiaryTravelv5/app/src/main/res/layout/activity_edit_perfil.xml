<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E2D3"
    tools:context=".EditPerfil">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain2"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#2D8C99"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Editar Perfil"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:fontFamily="@font/extrabold"
            android:textAlignment="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarMain2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="start">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="106dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"
                android:contentDescription="Avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textColor="#32343E"
                android:textSize="17sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:inputType="textPersonName"
                android:hint="Insira o nome completo"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Email"
                android:textColor="#32343E"
                android:textSize="17sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:inputType="textEmailAddress"
                android:hint="Insira o email"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Idade"
                android:textColor="#32343E"
                android:textSize="17sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:inputType="number"
                android:hint="Insira a idade"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Descrição"
                android:textColor="#32343E"
                android:textSize="17sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:inputType="textMultiLine"
                android:hint="Escreva uma descrição"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrParaLogin"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#1D4E89"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/regular" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrParaLogin2"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button1"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/regular" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
